<%- include("_header") -%>

<h1>Update Customer</h1>

<form action="/editCust/<%= model.cusid %>" method="post">
    <div class="form-horizontal">

        <%- include("_field") -%>

        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Update Customer" class="btn btn-default btn-danger" />
            </div>
        </div>
    </div>
</form>

<% if(type==="POST" ) { %>
    <script>
        document.getElementById("cusid").readOnly = true;
    </script>
<% if (result.trans !=="Error") {%>
<h3><%= result.msg %></h3>
<% } else { %>
<h3>Error!</h3>
<p>
    <%= result.msg %>
</p>
<%} %>
<% } else {%>
<script>
    document.getElementById("cusid").readOnly=true;
</script>
<% }%>
<%- include("_footer") -%>