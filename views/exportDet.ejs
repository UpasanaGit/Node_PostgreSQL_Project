<%- include("_header") -%>
<br>
<h2>Customer Export</h2>

<p>Total number of records in the database: <%= totRecs %></p>

<p>Enter a file name and click "Export Customers"</p>

<form action="/exportData" method="post">
    <label for="fname">File Name</label>
    <input type="text" id="fname" name="fname" value="export" onkeypress="return /[a-z]/i.test(event.key)"/>.txt<br/>
    <small>(Only alphabets allowed)</small><br/><br/>
    <input type="submit" id="submit" value="Export Customers" class="btn btn-primary " />
</form>

<% if(type === "POST") {%>
<% if(result.substring(0,5) === "Error") { %>
<h2>Error!</h2>
<p><%= result %></p>
<% } %>
<% } %>

<%- include("_footer") -%>