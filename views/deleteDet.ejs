<%- include("_header") -%>

<h1>Are you sure you want to delete this Customer?</h1>

<form action="/deleteCust/<%= model.cusid %>" method="post" >
    <div class="form-horizontal">

        <%- include("_field") -%>

        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Delete Customer" class="btn btn-default btn-danger" />
            </div>
        </div>
    </div>
</form>

<% if(type==="POST" ) { %>
    <script>
        var inputs = document.getElementsByTagName("input");
        // loop length-1 to avoid button to make it readOnly
        for (var i = 0; i < inputs.length - 1; i++) {
            inputs[i].readOnly = true;
        }
    </script>
<% if (result.trans !=="Error") {%>
<h3><%= result.msg %></h3>
<% } else { %>
<h3>Error!</h3>
<p>
    <%= result.msg %>
</p>
<%} %>
<% } else {%>
<script>
    var inputs = document.getElementsByTagName("input");
    // loop length-1 to avoid button to make it readOnly
    for (var i = 0; i < inputs.length-1; i++) { 
        inputs[i].readOnly=true;
    }
</script>
<% }%>
<%- include("_footer") -%>